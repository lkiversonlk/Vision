extends layout

block content
    div.container
        div.row
            div.col-xs-12.col-sm-12.col-md-4.col-md-offset-4.well.well-sm
                legend
                    i.glyphicon.glyphicon-globe
                    | 注册
                    br
                    small
                        | 带*号为必填项
                form(action="/users/registration",method="post",role="form")
                    div.form-group
                        label
                            | 账户名
                        div.input-group
                            input.form-control(name="username",placeholder="请输入账户名",type="text")
                            span.input-group-addon
                                span.glyphicon.glyphicon-asterisk
                    div.form-group
                        label
                            | 姓名
                        div.input-group
                            input.form-control(name="nickname",placeholder="请输入个人或者公司名称", type="text")
                            span.input-group-addon
                                span.glyphicon.glyphicon-asterisk
                    div.form-group
                        label
                            | 邮箱
                        input.form-control(name="email",placeholder="请输入联系邮箱",type="email")
                    div.form-group
                        label
                            | 联系方式
                        input.form-control(name="contact",placeholder="请输入联系方式",type="text")
                    div.form-group
                        label
                            | 设置密码
                        div.input-group
                            input.form-control(name="password",placeholder="请设置密码", type="password")
                            span.input-group-addon
                                span.glyphicon.glyphicon-asterisk
                    div.form-group
                        label
                            | 请重复密码
                        div.input-group
                            input.form-control(name="password-confirm",placeholder="请重复密码", type="password")
                            span.input-group-addon
                                span.glyphicon.glyphicon-asterisk
                    button.btn.btn-lg.btn-primary.btn-block(type="submit")
                        | 注册

