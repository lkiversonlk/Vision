extends ../layout
block content
    link(rel='stylesheet', href="/stylesheets/panel/panel.css")
    div.container
        div.row
            div.col-md-4.col-sm-6.col-xs-12.text-center
                div.icon.btn
                    a(href="/users/deposit")
                        span.glyphicon.glyphicon-usd.class-icon
                div
                    | 充值
            div.col-md-4.col-sm-6.col-xs-12.text-center
                div.icon.btn
                    a(href="/users/")
                        span.glyphicon.glyphicon-list.class-icon
                div
                    | 账户
            div.col-md-4.col-sm-6.col-xs-12.text-center
                div.icon.btn
                    a(href="/users/put")
                        span.glyphicon.glyphicon-play-circle.class-icon
                div
                    | 发布
    div.divider
    div.container
        div.panel.panel-default
            script(src="/templates/panel.js")
            div.panel-heading
                | 投放列表
                div.input-group.pull-right
                    span.glyphicon.glyphicon-search(style="margin-right:5px")
                    input#search-puttings
            div.panel-body
                ul#puttings-list.list-group
                    each putting in puttings
                        li.list-group-item.row
                            span.col-md-2
                                | #{putting.name}
                            span.col-md-2
                                | #{putting.creative}
                            span.col-md-2.col-md-offset-4
                                | #{putting.status}
                            span.col-md-2
                                | #{putting.date}
        script(src="/javascripts/lib/Chart.js")
        div.row
            div.chart-wrapper.text-center
                canvas#chart-canvas(width=600, height=200)
        div.row.text-center
            table.table
                thead
                    tr
                        th.text-center
                            | head4
                        th.text-center
                            | head3
                        th.text-center
                            | head2
                        th.text-center
                            | head1
                tbody
                    tr
                        td
                            | test
                        td
                            | test
                        td
                            | test
                        td
                            | test
                    tr
                        td
                            | test
                        td
                            | test
                        td
                            | test
                        td
                            | test
                    tr
                        td
                            | test
                        td
                            | test
                        td
                            | test
                        td
                            | test
    script(src="/javascripts/lib/runtime.js")
    script(src='/javascripts/panel/panel.js')