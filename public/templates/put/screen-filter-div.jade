each filter in filters
   div.row
      div
         span.filter-category.col-md-2
            label
               | #{filter.title}
         span.filter-options.col-md-10
            each option in filter.options
               span.filter-select
                  input(type="#{filter.type}")
                  span
                     | #{option.value}